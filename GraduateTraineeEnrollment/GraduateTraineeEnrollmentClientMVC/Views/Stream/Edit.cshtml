@using GraduateTraineeEnrollmentClientMVC.ViewModel
@model UpdateStreamViewModel

<h1>Update Stream :</h1>
<form asp-action="Edit">
    <div class="form-group">
        <label asp-for="DegreeId" class="control-label"></label>
        <select asp-for="DegreeId" class="form-control" asp-items="@(new SelectList(Model.Degrees, "DegreeId","DegreeName", "DegreeDescription"))"></select>
        <span asp-validation-for="DegreeId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="StreamName" class="control-label"></label>
        <input asp-for="StreamName" class="form-control" />
        <span asp-validation-for="StreamName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="StreamDescription" class="control-label"></label>
        <input asp-for="StreamDescription" class="form-control" />
        <span asp-validation-for="StreamDescription" class="text-danger"></span>
    </div>
    
    <div class="form-group">
        <input type="hidden" asp-for="StreamId" />
        <input type="submit" value="Update" class="btn btn-primary" />
        <a asp-action="Index" asp-route-id=@Model class="btn btn-danger">Cancel</a>
    </div>
</form>